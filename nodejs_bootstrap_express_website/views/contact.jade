extends layout

block content
      .container
        form.form-horizontal(method='post', action='contact/send')
        h1 Contact
        .form-group
          label.col-sm-2.control-label(for='name') Name
          input.form-control(type='text', name='name', placeholder='First & Last Name')
        .form-group
          label.col-sm-2.control-label(for='email') Email
          input.form-control(type='email', name='email', placeholder='example@domain.com')
        .form-group
          label.col-sm-2.control-label(for='message') Message
          textarea.form-control(rows='4', name='message')
        button.btn.btn-primary(type='submit') Submit